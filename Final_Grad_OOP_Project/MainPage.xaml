<Page
    x:Class="Final_Grad_OOP_Project.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Final_Grad_OOP_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel Margin="45,0,0,0">
            <!-- Menu Button -->
            <Button Name="HomeBtn" 
                    RelativePanel.AlignLeftWithPanel="True"
                    Click="HomeBtn_Click"
                    FontFamily="Segoe MDL2 Assets"
                    Height="32"
                    Width="43"
                    Content="&#xE80F;" />

            <!-- Back Button -->
            <Button Name="BackBtn" 
                    RelativePanel.LeftOf="SearchAutoSuggestBox"
                    FontFamily="Segoe MDL2 Assets"
                    Click="BackBtn_Click"
                    Height="32"
                    Width="40"
                    Content="&#xE72B;" >
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>

            <!-- box - top right -->
            <AutoSuggestBox Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for Class"
                            Width="200"
                            QueryIcon="Find"
                            TextChanged="SearchAutoSuggestBox_TextChanged"
                            QuerySubmitted="SearchAutoSuggestBox_QuerySubmitted"
                            RelativePanel.AlignRightWithPanel="True"
                            />
        </RelativePanel>

        <!-- BDO CLASSES BUTTONS -->
        <Button Name="Archer_btn" Height="45" Width="45" VerticalAlignment="Top" Click="Archer_btn_Click" Grid.RowSpan="2" ToolTipService.ToolTip="Archer">
            <Button.Background>
                <ImageBrush ImageSource="/Assets/BDO Class Logos/Archer/Archer.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Name="Berserker_btn" Height="45" Width="45" Margin="0,13,0,0" VerticalAlignment="Top" Click="Berserker_btn_Click" Grid.Row="1" ToolTipService.ToolTip="Berserker">
