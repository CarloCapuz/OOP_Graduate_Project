<Page
    x:Class="Final_Grad_OOP_Project.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Final_Grad_OOP_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel>
            <!-- Menu Button -->
            <Button x:ConnectionId='24' Name="HomeBtn" 
                    RelativePanel.AlignLeftWithPanel="True"
                                         
                    FontFamily="Segoe MDL2 Assets"
                    Height="32"
                    Width="43"
                    Content="&#xE80F;" />

            <!-- Back Button -->
            <Button x:ConnectionId='25' Name="BackBtn" 
                    RelativePanel.LeftOf="SearchAutoSuggestBox"
                    FontFamily="Segoe MDL2 Assets"
                                         
                    Height="32"
                    Width="40"
                    Content="&#xE72B;" >
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>

            <!-- box - top right -->
            <AutoSuggestBox x:ConnectionId='26' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for Class"
                            Width="200"
                            QueryIcon="Find"
                                                                          
                                                                                
                            RelativePanel.AlignRightWithPanel="True"
                            />
        </RelativePanel>

        <!-- BDO CLASSES BUTTONS -->
        <Button x:ConnectionId='2' Name="Archer_btn" Height="45" Width="45" VerticalAlignment="Top"                          Grid.Row="1">
